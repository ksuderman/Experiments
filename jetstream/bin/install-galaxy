#!/usr/bin/env bash

#NAME=${NAME:-galaxy}
CHART=${CHART:-galaxy/galaxy}
#CHART=/Users/suderman/Workspaces/JHU/galaxy-helm/galaxy
HTML=${1:-files/welcome-js1.html}

echo "Installing Galaxy using Helm chart $CHART"
echo "HTML welcome file: $HTML"

helm upgrade --install galaxy -n galaxy $CHART \
  --reset-values \
  --create-namespace \
  -f files/values.yml \
  --set-file extraFileMappings."/galaxy/server/static/welcome\.html".content=$HTML