#
# The script MUST be sourced so the environment variables persist.
#
source $(cat SECRETS)
export PATH=./scripts:$PATH
if [[ ! -e .venv ]] ; then
    python3 -m venv .venv
    source .venv/bin/activate
    pip install --upgrade pip
    pip install ansible
else 
    source .venv/bin/activate
fi
alias tf=terraform
