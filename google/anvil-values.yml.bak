galaxy:
  image: 
    repository: quay.io/galaxyproject/galaxy-anvil
    tag: 22.05
  nodeSelector:
    cloud.google.com/gke-nodepool: worker-pool
  terra:
    launch:
      namespace: galaxy-anvil-edge
      workspace: De novo transcriptome reconstruction with RNA-Seq
    configs:
      job_conf\.yml:
        runners:
          k8s:
            k8s_node_selector: "cloud.google.com/gke-nodepool: worker-pool"
      file_sources_conf\.yml:
      galaxy\.yml:
        galaxy:
          master_api_key: galaxypassword
          single_user: suderman@jhu.edu
          admin_users: suderman@jhu.edu
          job_metrics_config_file: job_metrics_conf.yml
  persistence:
    storageClass: nfs-ks-cloudcosts
    size: "200Gi"
  service:
    type: LoadBalancer
    port: 8000   
  postgres:
    galaxyDatabasePassword: galaxypassword
    persistence:
      existingClaim: ks-cloudcosts-postgres-disk-pvc
    master:
      nodeSelector:
        cloud.google.com/gke-nodepool: worker-pool
  webHandlers:
    startupDelay: 10
  jobHandlers:
    startupDelay: 5
  workflowHandlers:
    startupDelay: 0
s3csi:
  nodeSelector:
    cloud.google.com/gke-nodepool: worker-pool
nfs:
  storageClass:
    name: nfs-ks-cloudcosts
    defaultClass: false
  persistence:
    existingClaim: ks-cloudcosts-nfs-disk-pvc
    size: "505Gi"
rbac:
  enabled: false
persistence:
  nfs:
    name: ks-cloudcosts-nfs-disk
    size: "505Gi"
    persistentVolume:
      extraSpec:
        gcePersistentDisk:
          pdName: ks-cloudcosts-nfs-pd
  postgres:
    name: ks-cloudcosts-postgres-disk
    size: "10Gi"
    persistentVolume:
      extraSpec:
        gcePersistentDisk:
          pdName: ks-cloudcosts-postgres-pd

